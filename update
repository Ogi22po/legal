#!/bin/bash

remote='legal.pecina.cz'

./dosass
./manage.py collectstatic --noinput --ignore='*.scss' --ignore='*.map'
rsync -avhHzx \
      --exclude '.*' \
      --exclude '*.pyc' \
      --exclude '*.pyc' \
      --exclude '*~' \
      --exclude '/aux/' \
      --exclude '/update' \
      --exclude 'static/' \
      --exclude '/collect/admin/' \
      --exclude '/aux/' \
      --exclude '*.po' \
      --exclude 'migrations/' \
      --exclude '__pycache__/' \
      --exclude '/venv*' \
      --exclude '/repo/udn/' \
      --exclude 'test*' \
      --exclude 'fixtures/*_test*.json' \
      --exclude '/test/' \
      --exclude '/htmlcov/' \
      --exclude 'scss.map' \
      --exclude '*.map' \
      --exclude '#*' \
      --delete \
      ./ $remote:/var/www/django/legal/

ssh $remote 'touch /var/www/django/legal/common/wsgi.py'
